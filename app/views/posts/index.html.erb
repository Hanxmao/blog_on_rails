<div class="row row-cols-1 row-cols-md-3 g-4">
    <% @posts.each do |post|%>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= link_to post.title, post_path(post)%></h5>
                    <p class="card-text"><%= post.body %></p>
                </div>
            </div>  
        </div>
    <% end %>
</div>

